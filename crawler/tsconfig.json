{
	"compilerOptions": {
		"lib": ["ESNext"],
		"module": "NodeNext",
		"target": "es2022",
		"strict": true,
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"moduleResolution": "node16",
		"skipDefaultLibCheck": true,
		"rootDir": ".",
		"outDir": "./build"
	},
	"include": ["src", "api"],
	"exclude": [
		"node_modules"
	]
}
